<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    <script src=@Url.Content("~/Scripts/JS.js")></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

  
        @{
            Html.RenderAction("Karusel", "Home");
        }


    <div class="container">
        <div class="row">
            
                <h4>


                    @{
                        var re = " ";
                        if (Request.Cookies["userName"] != null)
                        {
                            re = Request.Cookies["userName"].Value;

                        }
                        else { re = "ГОСТЬ"; }
                    }
                    Привет @re !!!
                </h4>
            </div>                   
           
        </div>
 
    <hr background-color: lightgray> 

        <div class="container">

            <div class="row">
                <div class="menu">
                    <div class="col-md-3">
                        <ul class="nav nav-pills nav-stacked">

                            <li role="presentation">@Html.ActionLink("Все фильмы", "Films", "Home")</li>
                            <li role="presentation">@Html.ActionLink("Фильтровка", "Filters", "Home")</li>
                            <li role="presentation">@Html.ActionLink("Добавить фильм", "AddFilm", "Home")</li>
                            <li role="presentation">@Html.ActionLink("Саундтреки", "Music", "Home")</li>
                                               
                        </ul>
                    </div>
                </div>




                <div class="col-md-9">

                    @RenderBody()
                </div>

            </div>
        </div>
</body>
</html>
